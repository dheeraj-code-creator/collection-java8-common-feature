package com.example.java8feature;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.List;
import java.util.StringJoiner;
import java.util.stream.Collectors;

public class SortListInAlphabeticalOrder {

    public static void main(String[] args) {

        List<String> divison = Arrays.asList(
                "Footwear,Apparel",
                "Footwear",
                "Accessories",
                "Apparel,Accessories",
                "Apparel,Footwear",
                "Accessories,Apparel",
                "Apparel",
                "Footwear,Accessories",
                "Accessories,Footwear");

        // Java 8
        List<String> divisionList = divison.stream().map(
                k -> Arrays.stream(k.split("\\s*,\\s*"))
                        .sorted()
                        .collect(Collectors.joining(","))
        ).distinct().sorted().collect(Collectors.toList());
        divisionList.forEach(System.out::println);

        // Java 7
        /*List<String> sortedList = new ArrayList<>();
        for(String str: divison){
            String[] item = str.split("\\s*,\\s*");
            List<String> itemList = Arrays.asList(item);
            Collections.sort(itemList);
            StringJoiner joiner = new StringJoiner(",");
            for(String sortedItem: itemList){
                joiner.add(sortedItem);
            }
            String sortedCommaSeparated = joiner.toString();
            sortedList.add(sortedCommaSeparated);
        }
        sortedList.stream().distinct().sorted().forEach(System.out::println);*/




    }
}
